<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/section_row_main"
           android:text="Technology"
           android:padding="8dp"
           android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_row_main"
            android:layout_below="@+id/section_row_main"
            android:text="HEY TO ALL"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="8dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher"
            android:id="@+id/image_row_main"
            android:scaleType="fitXY"
            android:layout_below="@+id/title_row_main"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_row_main"
            android:layout_below="@+id/image_row_main"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="8dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/description_row_main"
           android:orientation="horizontal">
           <Button
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Read More"
               android:id="@+id/btn_more_row_main"/>
           <Button
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Share"
               android:id="@+id/share_row_main"/>

           </LinearLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>